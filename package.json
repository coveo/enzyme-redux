{
    "name": "@coveord/enzyme-redux",
    "version": "0.2.1",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "description": "Test utils to simplify testing of containers in redux with enzyme.",
    "repository": {
        "type": "git",
        "url": "https://github.com/coveo/enzyme-redux"
    },
    "keywords": [
        "redux",
        "enzyme",
        "store",
        "test"
    ],
    "engines": {
        "node": ">=6"
    },
    "author": "Dennis Axelsson <knegusen@gmail.com>",
    "contributors": [
        {
            "name": "Coveo"
        }
    ],
    "devDependencies": {
        "@babel/cli": "^7.12.8",
        "@babel/core": "^7.12.9",
        "@babel/preset-env": "^7.12.7",
        "@babel/preset-react": "^7.12.7",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "babel-eslint": "^8.0.1",
        "babel-jest": "^22.4.1",
        "cz-conventional-changelog": "^3.3.0",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-prefer-arrow": "^1.2.2",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^4.3.0",
        "jest": "^26.4.2",
        "lint-staged": "^9.5.0",
        "prettier": "^2.1.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-redux": "^5.0.7",
        "redux": "^3.5.2",
        "redux-test-utils": "^0.1.0",
        "rimraf": "^2.5.3",
        "semantic-release": "^17.3.0"
    },
    "peerDependencies": {
        "enzyme": "^3.0.0",
        "react": "^16.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "**/*.{js}": [
            "prettier --write",
            "eslint -c ./.eslintrc.js --fix",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "scripts": {
        "clean": "rimraf lib",
        "build": "npm run clean && eslint \"src/**.*\" --ignore-pattern '**/*.spec.*' --color && babel src --out-dir dist --ignore **/__tests__/**",
        "prepublish": "npm run build",
        "lint": "prettier --write \"**/*.{ts,js,json,md}\" && eslint \"src/**.*\" --fix",
        "lintfix": "prettier --write \"**/*.{ts,js,json,md}\" && eslint \"src/**.*\" --fix",
        "test": "npm run lint && jest --clearCache && jest",
        "commit-cli": "git-cz",
        "release": "semantic-release"
    },
    "licenses": [
        {
            "type": "MIT"
        }
    ],
    "babel": {
        "presets": [
            "@babel/env",
            "@babel/react"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "all",
        "endOfLine": "auto",
        "bracketSpacing": false,
        "tabWidth": 4
    },
    "jest": {
        "setupTestFrameworkScriptFile": "<rootDir>/jestSetup.js"
    },
    "dependencies": {}
}
